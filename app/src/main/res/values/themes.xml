<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FoodDoor" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/primary_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">false</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowBackground">@color/bg_color</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBarOverlay">false</item>
    </style>

    <style name="SearchViewCustom">
        <item name="android:imeOptions">actionSearch</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textCursorDrawable">@drawable/ic_cursor</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:padding">@dimen/_13dp</item>
        <item name="android:drawablePadding">@dimen/_10dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_search_round</item>
        <item name="android:drawableStart">@drawable/ic_search_icon</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Theme.FoodDoor.Launcher">
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="android:windowBackground">@drawable/launch_screen</item>
        <item name="android:navigationBarColor">@color/primary</item>
    </style>

    <style name="Theme.FoodDoor.Intro">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

    <style name="editBtnStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:inset">0dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="font">@font/avenir_medium</item>
        <item name="android:background">@drawable/bg_btn_round</item>
        <item name="backgroundTint">@color/gray11</item>
        <item name="android:textSize">@dimen/_13dp</item>
    </style>


    <!-- Body -->
    <style name="Body">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/avenir_light</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Body1" parent="Body">
        <item name="android:textSize">@dimen/b1</item>
        <item name="android:lineSpacingExtra">@dimen/line45</item>
        <!--<item name="android:textFontWeight">@integer/weight4</item>-->
    </style>

    <style name="Body3" parent="Body">
        <item name="android:textSize">@dimen/b3</item>
        <item name="android:lineSpacingExtra">@dimen/line35</item>
        <!--<item name="android:textFontWeight">@integer/weight4</item>-->
    </style>

    <!-- Footnotes -->

    <!-- Headings -->
    <style name="HeaderText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="HeaderTextH3" parent="HeaderText">
        <item name="android:textSize">@dimen/_16dp</item>
        <item name="android:lineSpacingExtra">@dimen/line25</item>
        <item name="android:textFontWeight">@integer/weight5</item>
    </style>

    <style name="SlideToActView">
        <item name="text">SlideToActView</item>
        <item name="colorSecondary">@color/orange</item>
        <item name="text_size">@dimen/slidetoact_default_text_size</item>
        <item name="area_margin">@dimen/slidetoact_default_area_margin</item>
        <item name="inner_color">?android:colorBackground</item>
        <item name="outer_color">?colorAccent</item>
        <item name="slider_locked">false</item>
    </style>


</resources>